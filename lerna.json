{
  "packages": [
    "packages/*"
  ],
  "version": "0.2.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md"
      ],
      "changelogPreset": {
        "name": "angular",
        "header": "some",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "Docs"
          }
        ]
      }
    }
  }
}
